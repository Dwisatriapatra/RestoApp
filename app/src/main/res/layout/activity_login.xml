<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.LoginActivity"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Login"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:id="@+id/textview_login"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/textview_login"
            android:layout_centerHorizontal="true"
            android:id="@+id/login_circle_image"
            android:layout_margin="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:hint="Masukkan username"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/custom_background_edit_text"
            android:padding="8dp"
            android:layout_below="@id/login_circle_image"
            android:id="@+id/login_input_username"
            android:importantForAutofill="no"
            android:layout_marginBottom="5dp"
            tools:ignore="TextFields" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:hint="Masukkan password"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/custom_background_edit_text"
            android:padding="8dp"
            android:layout_below="@id/login_input_username"
            android:id="@+id/login_input_password"
            android:importantForAutofill="no"
            android:layout_marginBottom="20dp"
            tools:ignore="TextFields" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_below="@id/login_input_password"
            android:id="@+id/button_login"
            android:background="@drawable/custom_background_edit_text"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont have an acoount? register here"
            android:id="@+id/login_registering_account"
            android:textSize="16sp"
            android:layout_below="@id/button_login"
            android:layout_margin="20dp"
            android:textColor="@color/ungu_register"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>